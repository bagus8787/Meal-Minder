<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF7E4"
    tools:context=".feedback">

    <TextView
        android:id="@+id/textFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Feedback App"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#e7826f"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal|top" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mealminderlogo" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:padding="20dp"
        android:progressBackgroundTint="#fabd02" />

    <TextView
        android:id="@+id/texttanya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How was your experience?"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#e7826f"
        android:fontFamily="@font/poppins_medium"/>

    <EditText
        android:id="@+id/TextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="#BAE9EEC7"
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:textStyle="bold"
        android:gravity="start|top"
        android:hint="Enter your feedback"
        android:textColorHint="#e7826f"
        android:inputType="textMultiLine"
        android:lines="4"
        android:padding="5dp"/>

    <Button
        android:id="@+id/btnSendFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_pink"
        android:text="Send Feedback"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"/>


</LinearLayout>